{
  "manifest_version": 3,
  "name": "mora - Time Tracker with AI analysis",
  "version": "1.0.0",
  "description": "Track time spent on different domains",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "idle"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "http://localhost:5173/*",
    "https://moraextension.pages.dev/*",
    "https://mora-5znf.onrender.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:5173/*",
      "https://*.mora-app.com/*",
      "https://moraextension.pages.dev/*",
      "https://mora-5znf.onrender.com/*"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "mora, Time Tracker"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:5173/*", "https://moraextension.pages.dev/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}